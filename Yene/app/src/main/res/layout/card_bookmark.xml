<androidx.cardview.widget.CardView android:id="@+id/card"
    android:layout_width="150dp"
    android:layout_marginRight="20dp"
    android:layout_marginLeft="20dp"
    android:layout_height="wrap_content"
    android:layout_marginTop="12dp"
    android:foreground="?android:attr/selectableItemBackground"
    android:layout_marginBottom="6dp"
    app:cardBackgroundColor="@color/colorCard"
    android:background="#f2dcda"
    app:cardElevation="5dp"
    app:cardCornerRadius="10dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
        <LinearLayout android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/pro"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:scaleType="centerCrop"
                android:layout_gravity="center"
                android:layout_marginRight="0dp"
                android:layout_marginLeft="0dp"
                android:src="@drawable/background"
                android:contentDescription="profile image"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_margin="0dp"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/nm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TEst Example"
                    android:layout_marginTop="5dp"
                    android:textSize="14sp"/>
                <TextView
                    android:id="@+id/workingArea"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Electrcian"
                    android:padding="2dp"
                    android:textColor="@android:color/holo_red_light"
                    android:textSize="10sp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:layout_gravity="center_vertical"
                    android:orientation="horizontal">
                    <RatingBar
                        android:id="@+id/rating"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_gravity="center_vertical"
                        android:layout_height="wrap_content"
                        android:numStars="1"
                        android:stepSize="0.1"
                        android:isIndicator="true"
                        style="?android:attr/ratingBarStyleSmall"/>
                    <com.github.ivbaranov.mfb.MaterialFavoriteButton
                        android:id="@+id/img_fav"
                        android:textColor="#2d2d2d"
                        android:layout_weight="1"
                        android:textSize="14sp"
                        android:gravity="end"
                        android:layout_width="0dp"
                        app:mfb_favorite_image="@drawable/ic_bookmark_black_24dp"
                        app:mfb_not_favorite_image="@drawable/ic_bookmark"
                        app:mfb_type="heart"
                        app:mfb_animate_favorite="true"
                        app:mfb_animate_unfavorite="false"
                        android:layout_height="wrap_content"
                        android:contentDescription="fav"/>
                </LinearLayout>
            </LinearLayout>
            <TextView android:id="@+id/about" android:layout_width="match_parent" android:layout_height="wrap_content" android:gravity="center" android:visibility="gone" android:textSize="12dp" android:text="Lorem ipsum dolor sit amet, consetetur sadipscing elitr, sed diam nonumy eirmod tempor invidunt ut labore et dolore magna." android:layout_marginLeft="15dp" android:layout_marginRight="15dp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
